
<div class="container-fluid d-flex justify-content-center align-content-center">
    <form asp-controller="SalesRecords" asp-action="SimpleSearch" method="get" class="navbar-form navbar-left" role="search">
        <div class="form-group row">
            <div class="form-group col">
                <label for="minDate">Min Date</label>
                <input type="date" class="form-control" name="minDate" />
            </div>
            <div class="form-group col">
                <label for="maxDate">Max Date</label>
                <input type="date" class="form-control" name="maxDate" />
            </div>
            <div class="form-group col pt-3 d-flex">
                <button type="submit" class="btn btn-primary" style="background-color:black">Filter</button>
            </div>
            <div class="col">
                <label class="mb-3 text-end closeBtn" onclick="ShowSimpleSearch('simpleSearchDiv')">X</label>
            </div>
        </div>
    </form>
</div>