@model DepartmentViewModel
@{
    ViewData["Title"] = "Delete Department";
}

<h2 class="mt-5 text-center">@ViewData["Title"]</h2>
<hr />
<div class="mt-5">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h4 class="text-danger">Are you sure you want to delete this?</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" /><input type="hidden" asp-for="Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Departments">Back to List</a>
    </form>
</div>


