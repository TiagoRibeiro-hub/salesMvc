@model SellerViewModel
@{
    ViewData["Title"] = "Delete Seller";
}
<h2 class="mt-5 text-center">@ViewData["Title"]</h2>
<hr />
<div class="mt-5">
    <dl class="row">
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>
        <dt class="col-sm-2 mt-3">
            @Html.DisplayNameFor(model => model.Departments)
        </dt>
        <dd class="col-sm-10 mt-3">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
    </dl>
    <h4 class="text-danger">Are you sure you want to delete this?</h4>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" /><input type="hidden" asp-for="Name" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Sellers">Back to List</a>
    </form>
</div>

